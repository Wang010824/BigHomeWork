<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_circle"
    tools:context="com.example.Fragment.Fragment_HomePage_Task">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BCF0E8FF">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginTop="3dp"
            android:src="@drawable/fragment2_03"/>
        <TextView
            android:id="@+id/TaskName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="30dp"
            android:textSize="18sp"
            android:layout_marginTop="2dp"
            android:text="彤雨晴"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/TaskPhoto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="left"/>

        <FrameLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:orientation="vertical"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/Taskmytextview"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/Taskmytextview1"
                    android:layout_width="match_parent"
                    android:layout_height="49dp" />

                <TextView
                    android:id="@+id/Taskmytextview2"
                    android:layout_width="match_parent"
                    android:textColor="@color/blue"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_marginTop="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="10dp"
        android:layout_height="30dp">
        <Button
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_circle3"
            android:textColor="#FF6F00"
            android:text="完成任务"/>
        <Button
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:background="@drawable/button_circle2"
            android:text="取消任务"/>
    </FrameLayout>
</LinearLayout>