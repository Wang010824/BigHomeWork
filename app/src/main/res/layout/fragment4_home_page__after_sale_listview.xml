<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_circle"
    tools:context="com.example.Fragment.Fragment_HomePage_AfterSale">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#BCF0E8FF">
        <ImageView
            android:layout_width="30dp"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:src="@drawable/fragment2_03"/>
        <TextView
            android:id="@+id/afterSalesName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:paddingLeft="30dp"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:text="彤雨晴"/>
        <ImageView
            android:layout_width="30dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:src="@drawable/fragment2_07"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:paddingRight="30dp"
            android:textSize="20sp"
            android:layout_marginTop="2dp"
            android:text="退款"/>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/afterSalesPhoto"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="left"/>

        <FrameLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:layout_marginRight="50dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="7dp"
                android:orientation="vertical"
                android:layout_gravity="left">

                <TextView
                    android:id="@+id/Aftersalemytextview"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />

                <TextView
                    android:id="@+id/Aftersalemytextview1"
                    android:layout_width="match_parent"
                    android:layout_height="49dp" />

                <TextView
                    android:id="@+id/Aftersalemytextview2"
                    android:layout_width="match_parent"
                    android:textColor="@color/blue"
                    android:layout_height="wrap_content" />
            </LinearLayout>
        </FrameLayout>
    </FrameLayout>
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <Button
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="查看详情"/>
        <Button
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="100dp"
            android:text="删除记录"/>
    </FrameLayout>
</LinearLayout>